<odoo>
    <data>

        <record id="account_bir_view_tree" model="ir.ui.view">
            <field name="name">account.bir.view.form</field>
            <field name="model">account.bir</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="code" required="1"/>
                    <field name="name" required="1"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        
        <menuitem name="BIR" id="menu_account_bir" parent="account.menu_finance_configuration" sequence="15" groups="base.group_system"/>
        
    </data>
</odoo>
