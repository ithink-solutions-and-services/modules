<odoo>
    <data>

        <record id="account_bir_view_tree" model="ir.ui.view">
            <field name="name">account.bir.view.form</field>
            <field name="model">account.bir</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="code" required="1"/>
                    <field name="name" required="1"/>
                    <field name="wizard_id" required="1"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_account_bir">
            <field name="name">BIR Forms</field>
            <field name="res_model">account.bir</field>
            <field name="view_mode">tree</field>
        </record>
        
        <menuitem name="BIR" id="menu_account_bir" parent="account.menu_finance" sequence="14" groups="account.group_account_manager"/>
        <menuitem name="BIR Forms" id="menu_account_bir_forms" parent="menu_account_bir" sequence="100" groups="base.group_system" action="action_account_bir"/>
        
    </data>
</odoo>
