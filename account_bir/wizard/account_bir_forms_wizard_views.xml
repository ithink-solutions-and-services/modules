<odoo>
    <data>
    
        <record id="account_bir_forms_wizard_view_form" model="ir.ui.view">
            <field name="name">Select BIR Form</field>
            <field name="model">account.bir.forms</field>
            <field name="arch" type="xml">
                <form string="Select BIR Form">
                    <group col="4">
                        <field name="account_bir_id" colspan="4" string="BIR Form" required="1"/>
                    </group>
                    <footer>
                        <button name="select_form"
                                string="Select"
                                type="object"
                                class="oe_highlight" />
                        or
                        <button
                            name="action_cancel"
                            string="Cancel"
                            class="oe_link"
                            special="cancel"
                            />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_account_bir_forms"
                    name="Select BIR Form"
                    res_model="account.bir.forms"
                    view_mode="form"
                    view_type="form"
                    target="new" />
    
        <menuitem name="Generate BIR Form" id="menu_account_bir_forms_wizard" parent="menu_account_bir" sequence="1" groups="account.group_account_manager" action="action_account_bir_forms"/>
        
    </data>
</odoo>
