<odoo>
    <data noupdate="1">

        <record model="ir.ui.view" id="tree_bir_2551m">
            <field name="name">bir.2551m.tree</field>
            <field name="model">bir.2551m</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="form_bir_2551m">
            <field name="name">bir.2551m.form</field>
            <field name="model">bir.2551m</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="2551M">
                    <header>
                        <field name="generated_file" invisible="1"/>
                        <field name="generated_file_name" invisible="1"/>
                        <button name="generate_pdf" type="object" string="Generate PDF"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="path_id"/>
                            <field name="generated_file_datas" filename="generated_file_name" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_bir_2551m">
            <field name="name">BIR 2551M</field>
            <field name="res_model">bir.2551m</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
