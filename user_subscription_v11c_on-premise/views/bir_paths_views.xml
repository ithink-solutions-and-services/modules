<odoo>
    <data>

        <record model="ir.ui.view" id="tree_bir_paths">
            <field name="name">bir.paths.tree</field>
            <field name="model">bir.paths</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="path"/>
                    <field name="filename"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>      

        <record model="ir.actions.act_window" id="action_bir_paths">
            <field name="name">BIR Paths</field>
            <field name="res_model">bir.paths</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</odoo>
