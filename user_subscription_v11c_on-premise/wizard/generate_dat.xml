<?xml version="1.0"?>
<odoo>

        <record id="view_generate_dat_wizard" model="ir.ui.view">
            <field name="name">BIR Forms</field>
            <field name="model">bir.generate.dat</field>
            <field name="arch" type="xml">
                <form string="BIR DAT">
                    <group col="4">
                        <field name="dat_type" colspan="4" string="BIR DAT" required="1"/>
                        <field name="of_month" colspan="2" string="For the Month of" required="1" attrs="{'invisible': [('dat_type','not in',['sales','purchases'])]}"/>
                        <field name="of_year" colspan="1" nolabel="1" required="1" attrs="{'invisible': [('dat_type','not in',['sales','purchases'])]}"/>
                        <field name="company_id" colspan="4" string="Company" required="1" attrs="{'invisible': [('dat_type','not in',['sales','purchases'])]}"/>
                        <field name="non_creditable" colspan="4" string="Non-Creditable Tax" attrs="{'invisible': [('dat_type','not in',['purchases'])], 'required': [('dat_type','in',['purchases'])]}"/>
                    </group>
                    <footer>
                        <button name="action_generate"
                                string="Generate"
                                type="object"
                                class="oe_highlight" />
                        or
                        <button
                            name="action_cancel"
                            string="Cancel"
                            class="oe_link"
                            special="cancel"
                            />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_generate_dat"
                    name="Generate DAT"
                    res_model="bir.generate.dat"
                    view_mode="form"
                    view_type="form"
                    target="new" />

        <menuitem name="BIR DAT" id="menu_generate_dat" action="action_generate_dat" parent="menu_bir_main" sequence="1"/>

</odoo>
