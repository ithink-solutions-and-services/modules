<!-- v ]Radius Groups -->
        <record model="ir.ui.view" id="radius_inherit_groups_form">
                <field name="name">radius.inherit.groups.form</field>
                <field name="model">radius.groups</field>
                <field name="inherit_id" ref="pdn_billing.groups_form"/>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <xpath expr="//group[@name='plan_name']" position="after">
                    <notebook colspan="4">
                    <page string="Radius Plan">
                        <group col="4">
                            <field name="category" required="1" colspan="2"/>
                            <field name="time_seconds" attrs="{'invisible': [('category','in',['volume','expiration'])]}" colspan="4"/>
                            <field name="volume_bytes" attrs="{'invisible': [('category','in',['time','expiration'])]}" colspan="4"/>
                            <field name="volume_megabytes" attrs="{'invisible': [('category','in',['time','expiration'])]}" colspan="4"/>
                            <field name="expiration_time_hours" attrs="{'invisible': [('category','in',['volume','time','time_volume'])]}" colspan="4"/>
                            <field name="upload_speed" colspan="4"/>
                            <field name="download_speed" colspan="4"/>
                        </group>
                    </page>
                    <page string="Sales">
                        <group col="4">
                            <field name="product_id" required="1" colspan="2"/>
                            <field name="price" widget="monetary" readonly="1" colspan="2"/>
                            <field name="journal_id" required="1" domain="[('type','=','sale')]" colspan="2"/>
                        </group>
                    </page>
                    <page string="Radius Attributes">
                        <group col="4">
                            <field name="attribute_ids" colspan="4">
                                <tree editable="top">
                                <!--<field name="name"/>-->
                                    <field name="attribute_id"/>
                                    <field name="type"/>
                                    <field name="op"/>
                                    <field name="value"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    </notebook>
                    </xpath>
                </field>
        </record>
        
