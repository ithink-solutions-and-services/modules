<odoo>
    <data>

        <record model="ir.cron" id="radius_account_usage_cron">
            <field name="name">Radius Account Usage</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="True"/>
            <field name="model_id" ref="pdn_billing.model_res_partner_vouchers_voucher"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_usage()</field>
        </record>

        <record model="ir.cron" id="radius_invoice_generation_cron">
            <field name="name">Radius Invoice Generation</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="True"/>
            <field name="model_id" ref="pdn_billing.model_res_partner_vouchers_voucher"/>
            <field name="state">code</field>
            <field name="code">model.cron_radius_invoice_generation()</field>
            <field name="active" eval="False"/>
        </record>

    </data>
</odoo>
