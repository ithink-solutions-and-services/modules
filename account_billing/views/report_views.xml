            <div class="pull-left company_address">
              <div>
                <strong t-field="doc_id.company_id.partner_id.name"/>
              </div>
              <span t-field="doc_id.company_id.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}"/>
            </div>
          </td>
