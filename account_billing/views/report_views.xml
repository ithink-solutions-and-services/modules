<odoo>
    <data>

        <template id="report_account_invoice_bill_document">
            <style> .bold { font-weight:bold; } </style>
            <div class="article">
                <t t-set="company" t-value="doc_id.company_id"/>
                <div class="page" style="font-size:10px;color:black!important;">
                    <div class="header o_background_header">
                        <div class="pull-right">
                            <h3 class="mt0 text-right">If undelivered, please return to:</h3>
                            <strong t-field="company.partner_id.name"/>
                            <span t-field="company.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}"/>
                        </div>
                        <div class="pull-left company_address">
                            <table>
                                <tr>
                                    <td style="text-align:right;">CUST NO.:</td>
                                    <td style="text-align:left;"><span t-field="doc_id.partner_id.id"/></td>
                                </tr>
                                <tr>
                                    <td style="text-align:right;">TO:</td>
                                    <td style="text-align:left;"><span t-field="doc_id.partner_id.name"/></td>
                                </tr>
                                <tr>
                                    <td style="text-align:right;">ADDRESS:</td>
                                    <td style="text-align:left;"><span t-field="company.partner_id" t-field-options="{&quot;widget&quot;: &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}"/></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <p style="text-align:center;">STATEMENT OF ACCOUNT</p>
                    <p><div class="pull-left">Ref. No.: <span t-field="doc_id.number"/></div><div class="pull-right">Rundate: <span t-field="doc_id.date_invoice"/></div></p>
                    <p style="text-align:center;border-top:2px;border-bottom:2px;padding:2px;">PARTICULARS</p>
                    <table>
                        <tr>
                            <td colspan="2">
                                <table>
                                    <tr>
                                        <td style="text-align:center;">ASSOCIATION DUES</td>
                                        <td style="border-bottom: 2px solid black;"><t t-esc="doc_id.monthly_due_total"/></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;"><t t-esc="doc_id.billing_period_id"/></td>
                                        <td>&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;">WATER CONSUMPTION</td>
                                        <td style="border-bottom: 2px solid black;"><t t-esc="doc_id.water_total"/></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right;" class="bold">TOTAL AMOUNT DUE (Php)</td>
                                        <td style="border-bottom: 2px double black;"><t t-esc="doc_id.amount_total"/></td>
                                    </tr>
                                </table>
                                <p>*** METER READINGS ***</p>
                                <table>
                                    <tr>
                                        <td>&amp;nbsp;</td>
                                        <td class="bold">CURRENT</td>
                                        <td class="bold">PREVIOUS</td>
                                        <td class="bold">USED</td>
                                    </tr>
                                    <tr>
                                        <td class="bold">WATER</td>
                                        <td><t t-esc="doc_id.total_cu_ms"/></td>
                                        <td><t t-esc="doc_id.total_cu_ms - doc_id.latest_cu_ms"/></td>
                                        <td><t t-esc="doc_id.latest_cu_ms"/></td>
                                    </tr>
                                </table>
                                <p>Reminders on Payment of Association Dues:</p>
                                <ol>
                                    <li>Payment must be made on or before <t t-esc="doc_id.date_due"/> to avoid disconnection of water service.</li>
                                    <li>Issue your check in favor of <t t-esc="company.partner_id.name"/>.</li>
                                    <li class="bold">Always bring the statement of account when paying.</li>
                                    <li>Schedule of payment (Mon-Sat 8:00am to 5:00pm).</li>
                                    <li>For clarification/question, Please see or contact our administrator.</li>
                                    <li>Please disregard if payment has already been made.</li>
                                </ol>
                            </td>
                            <td>
                                <table>
                                    <tr>
                                        <td>&amp;nbsp;</td>
                                        <td>PREVIOUS BALANCE</td>
                                    </tr>
                                    <tr>
                                        <td>&amp;nbsp;</td>
                                        <td style="border-bottom: 2px solid black;"><t t-esc="doc_id.billing_id.invoice_dues(doc_id.id)"/></td>
                                    </tr>
                                    <tr>
                                        <td class="bold" style="text-align:center;">Water consumption</td>
                                        <td>&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;">1st <t t-esc="doc_id.total_cu_ms_fixed"/> cu. meter</td>
                                        <td style="text-align:right;"><t t-esc="doc_id.total_cu_ms_fixed_price"/></td>
                                    </tr>
                                    <tr>
                                        <td>&amp;nbsp;</td>
                                        <td style="text-align:left;" class="bold">Add</td>
                                    </tr>
                                    <tr>
                                        <td class="bold" style="text-align:center;">Excess of <t t-esc="doc_id.total_cu_ms_fixed"/> cu. meter: </td>
                                        <td>&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right;"><t t-esc="doc_id.latest_cu_ms"/> less <t t-esc="doc_id.total_cu_ms_fixed"/></td>
                                        <td>&amp;nbsp;</td>
                                    </tr>
                                    <t t-set="total_additional_price" t-value="doc_id.latest_cu_ms - doc_id.total_cu_ms_fixed"/>
                                    <t t-if="total_additional_price&lt;0"><t t-set="total_additional_price" t-value="0"/></t>
                                    <tr>
                                        <td style="text-align:center;">Multiply by <t t-esc="doc_id.total_cu_ms_exceed_price"/></td>
                                        <td style="text-align:right;border-bottom: 2px solid black;"><t t-esc="doc_id.total_cu_ms_exceed_price * (total_additional_price)"/></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right;" class="bold">H2O Cost (Php)</td>
                                        <td style="text-align:right;border-bottom: 2px double black;" class="bold"><t t-esc="doc_id.water_total"/></td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>   
                </div>
            </div>
        </template>

        <template id="report_account_invoice_bill">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc_id">
                    <t t-call="account_billing.report_account_invoice_bill_document"/>
                </t>
            </t>
        </template>
        
        <template id="report_account_payment_receipt_document">
            <style> .bold { font-weight:bold; } </style>
            <div class="article">
                <t t-set="company" t-value="doc_id.company_id"/>
                <div class="page" style="font-size:10px;color:black!important;">
                    <div class="header o_background_header">
                        <div class="pull-right">
                            <h3 class="mt0 text-right">Official Receipt No.: <t t-field="doc_id.or_no"/></h3>
                            <h5>This Official Receipt will not be used to generate VAT Input/Output Tax</h5>
                        </div>
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" class="pull-left"/>
                        <div class="pull-left company_address">
                            <div>
                                <strong t-field="company.partner_id.name"/>
                            </div>
                            <span t-field="company.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}"/>
                        </div>
                    </div>
                    
                    <table style="border: 2px solid black;">
                        <tr>
                            <td>&amp;nbsp;</td>
                            <td><div class="bold">DATE:</div> <span t-field="doc_id.payment_date"/></td>
                        </tr>
                        <tr>
                            <td><div class="bold">RECEIVED FROM:</div> <span t-field="doc_id.partner_id"/></td>
                            <td><div class="bold">CUSTOMER NO:</div> <span t-field="doc_id.partner_id.id"/></td>
                        </tr>
                        <tr>
                            <td><div class="bold">ADDRESS:</div> <span t-field="doc_id.partner_id" t-field-options="{&quot;widget&quot;: &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}"/></td>
                            <td rowspan="2">
                                <table>
                                    <tr>
                                        <td><div class="bold">DETAILS OF PAYMENT:</div></td>
                                        <td>&amp;nbsp;</td>
                                        <td>&amp;nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td><div class="bold">Total Due Amount</div></td>
                                        <td>Php</td>
                                        <td><span t-field="doc_id.invoices_total_due"/></td>
                                    </tr>
                                    <tr>
                                        <td><div class="bold">Paid Amount</div></td>
                                        <td>Php</td>
                                        <td><span t-field="doc_id.amount"/></td>
                                    </tr>
                                    <tr>
                                        <td><div class="bold">Outstanding Balance</div></td>
                                        <td>Php</td>
                                        <td><t t-esc="doc_id.invoices_total_due - doc_id.amount"/></td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td rowspan="3">
                                <p class="bold">Amount: (in words)</p>
                                <p style="padding-left: 4px;"><t t-esc="doc_id.currency_id.amount_to_text(doc_id.amount)"/></p>
                                <p class="bold">In payment for</p>
                                <p style="padding-left: 4px;"><t t-esc="doc_id.particulars"/></p>
                                <p class="bold">FORM OF PAYMENT</p>
                                <p style="padding-left: 4px;" class="bold">CASH: ( <t t-if="doc_id.payment_method_code == 'manual'">X</t> ) &amp;nbsp; &amp;nbsp; CHECK: ( <t t-if="doc_id.payment_method_code == 'electronic'">X</t> )</p>
                                <table style="border:2px solid black;">
                                    <tr>
                                        <td class="bold">Date</td>
                                        <td class="bold">Bank</td>
                                        <td class="bold">Check</td>
                                        <td class="bold">Amount</td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td><span t-field="doc_id.amount"/></td>
                                    </tr>
                                </table>
                            </td>
                            <td>
                                <table>
                                    <tr>
                                        <td colspan="2"><span t-field="company.partner_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td><div class="bold">Prepared by:</div></td>
                                        <td><div class="bold">Approved by:</div></td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                    <p style="text-align:center" class="bold">ORIGINAL COPY - Homeowner &amp;nbsp; DUPLICATE COPY - Accounting</p>
                </div>
            </div>
        </template>

        <template id="report_account_payment_receipt">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc_id">
                    <t t-call="account_billing.report_account_payment_receipt_document"/>
                </t>
            </t>
        </template>
    
    </data>
</odoo>
