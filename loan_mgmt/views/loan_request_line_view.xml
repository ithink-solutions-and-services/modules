<odoo>
    <data>

        <record id="view_loan_mgmt_loan_request_line_form" model="ir.ui.view">
            <field name="name">view.loan.mgmt.loan.request.line.form</field>
            <field name="model">loan_mgmt.loan_request.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                         <button name="button_invoiced" type="object" string="Create Invoice" class="oe_highlight" states="draft"/>
                         <button name="button_validate" type="object" string="Open Invoice to Validate" class="oe_highlight" states="invoiced"/>
                         <button name="button_pay" type="object" string="Open Invoice to Register Payment" class="oe_highlight" states="open"/>
                         <field name="state" widget="statusbar" nolabel="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="from_date"/>
                                <field name="to_date"/>
                                <field name="amount"/>
                                <field name="interest"/>
                                <field name="emi"/>
                            </group>
                            <group>
                                <field name="partner_id" options="{'no_create': True, 'no_open': True }"/>
                                <field name="partner_categ_id" options="{'no_create': True, 'no_open': True }"/>
                                <field name="loan_type_id" options="{'no_create': True, 'no_open': True }"/>
                                <field name="invoice_id" options="{'no_create': True, 'no_open': True }"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    
    
        <record id="view_loan_mgmt_loan_request_line_tree" model="ir.ui.view">
          <field name="name">view.loan.mgmt.loan.request.line.tree</field>
          <field name="model">loan_mgmt.loan_request.line</field>
          <field name="arch" type="xml">
            <tree editable="bottom">
              <field name="name"/>
              <field name="from_date"/>
              <field name="to_date"/>
              <field name="amount"/>
              <field name="interest"/>
              <field name="emi"/>
              <field name="state"/>
            </tree>
          </field>
        </record>
    
    </data>
</odoo>